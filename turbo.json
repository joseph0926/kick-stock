{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build:client": {
      "outputs": ["dist/**"],
      "cache": false
    },
    "dev:ssr": {
      "dependsOn": ["build:client"],
      "cache": false,
      "persistent": true
    }
  }
}
