{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@kickstock/ssr-client/*": ["../ssr-client/src/*"],
      "@kickstock/client/*": ["../client/src/*"],
      "@kickstock/shared/*": ["../../packages/shared/src/*"],
      "@kickstock/router/*": ["../router/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../client/src",
    "../ssr-client/src",
    "../../packages/shared/src",
    "../router/src"
  ],
  "exclude": ["**/*.spec.ts"]
}
